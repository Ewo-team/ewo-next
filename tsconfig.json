{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDirs": [
      "src",
      "test"
    ],
    "baseUrl": "src",
    "paths": {
      "@server/*": [
        "server/*"
      ],
      "@client/*": [
        "client/*"
      ],
      "@models": [
        "engine/models/index.ts"
      ],
      "@models/*": [
        "engine/models/*"
      ],
      "@tasks": [
        "engine/tasks/index.ts"
      ],
      "@tasks/*": [
        "engine/Commands/tasks/*"
      ],
      "@commands/*": [
        "engine/Commands/CommandsTemplate/*"
      ],
      "@engine/*": [
        "engine/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "typedocOptions": {
    "name": "E.W.O. Next",
    "mode": "modules",
    "out": "docs/technical",
    "theme": "tsdoc-theme",
    "ignoreCompilerErrors": "false",
    "preserveConstEnums": "true",
    "exclude": [
      "**/*+(spec|test|stories).+(ts|js)?(x)",
      "**/*.module.scss.ts",
      "node_modules"
    ],
    "stripInternal": "false",
    "excludeExternals": "true"
  },
  "include": [
    "src/**/*.ts",
    "test/mock/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}